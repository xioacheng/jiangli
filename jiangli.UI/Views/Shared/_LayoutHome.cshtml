<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 讲理</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/sb-admin.css" rel="stylesheet">
    @Styles.Render("~/Content/systemcss")
    @Styles.Render("~/Content/Maincss")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <!-- logo -->
                <div class="jl-logo">
                    @Html.ActionLink("讲理", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <!-- end logo -->
            </div>
            <div class="jl-publish-btn">
                <a id="header_publish" class="btn-primary" data-toggle="modal" data-target="#mymodal">发起案件</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("首页", "Index", "Home")</li>
                    <li>@Html.ActionLink("发现", "About", "Home")</li>
                </ul>
                @using (Html.BeginForm("search", "Search", FormMethod.Post, new { @class = "navbar-form navbar-left hidden-xs hidden-sm" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        @Html.TextBox("seachtext", "", new { @class = "form-control", @placeholder = "请输入关键词" })
                    </div>
                    <button type="submit" class="btn btn-default">搜索</button>
                }
                <ul class="nav navbar-nav navbar-right navbar-user">
                    <li class="dropdown messages-dropdown">
                        <!-- 信件图标 span --消息提示badge  -->
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-bell"></i> 消息 <span class="badge"></span> <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <!-- 下拉菜单标题 -->
                            <li class="dropdown-header">7 New Messages</li>

                            <li class="message-preview">
                                <a href="#">
                                    <span class="avatar"><img src="http://placehold.it/50x50"></span>
                                    <span class="name">John Smith:</span>
                                    <span class="message">Hey there, I wanted to ask you something...</span>
                                    <span class="time"><i class="fa fa-clock-o"></i> 4:34 PM</span>
                                </a>
                            </li>
                            <!-- 分割线 -->
                            <li class="divider"></li>


                            <li><a href="#">加载完毕 <span class="badge"></span></a></li>
                        </ul>
                    </li>

                    <!-- 用户下拉菜单 -->
                    <li class="dropdown user-dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i> achang<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href="#"><i class="fa fa-user"></i> 个人信息</a></li>
                            <li><a href="#"><i class="fa fa-envelope"></i> 私信<span class="badge">7</span></a></li>
                            <li><a href="#"><i class="fa fa-gear"></i> 设置</a></li>
                            <li class="divider"></li>
                            <li><a href="#"><i class="fa fa-power-off"></i> 注销</a></li>
                        </ul>
                    </li>
                </ul>
            </div>

        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        @{Html.RenderPartial("_Publish");}
        <footer>
            <p>&copy; @DateTime.Now.Year - 我的 ASP.NET 应用程序</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
