@{
    ViewBag.Title = "Index";
}
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/RoleInfo.js"></script>
<div id="page-wrapper">
    <div class="col-lg-12">
        <ol class="breadcrumb">
            <li><a><i class="fa fa-dashboard"></i> 用户</a></li>
            <li class="active"><i class="fa fa-bar-chart-o"></i> 角色管理</li>
        </ol>
    </div>
    <h2>Role Manager</h2>
    <div class="alert alert-danger alert-dismissable">
        删除操作不可恢复，请谨慎操作。
    </div>
    <input type="button" class="btn btn-primary" value="添加角色" onclick="addUserRole()" />
    <div class="col-lg-6">
        <table class="table table-bordered table-hover table-striped ">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>角色</th>
                    <th>创建角色的用户</th>
                    <th>创建角色的日期</th>
                    <th>查看权限/增加权限</th>
                    <th>删除角色</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in ViewData["roles"] as List<jiangli.Models.Role>)
                {
                    <tr>
                        <td>@item.RoleID</td>
                        <td>@item.RoleName</td>
                        <td>@item.CreateByName</td>
                        <td>@item.CreateOn</td>
                        <td>
                            <input type="button" class="btn btn-primary" value="查看权限" onclick="Detail(@item.RoleID)"/>
                            <input type="button" class="btn btn-primary" value="修改权限" onclick="addPermit(@item.RoleID)"/>
                        </td>
                        <td><input type="button" value="删除角色" class="btn btn-default" onclick="deleteRole(@item.RoleID)"/></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-lg-6">
        
    </div>
</div>
@Html.Partial("addPermit")
@Html.Partial("Permitdetail")
@Html.Partial("AddUserRole")
<script>
    $(document).ready(function(){
        $("#UserManager").addClass("open");
        $("#role").addClass("active");
    })
</script>